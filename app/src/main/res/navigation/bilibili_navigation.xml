<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bilibili_nav"
    app:startDestination="@id/navigation_host">

    <fragment
        android:id="@+id/navigation_host"
        android:name="com.example.firestar.ui.bilibili.home.HostFragment"
        android:label="host"
        tools:layout="@layout/fragment_host"/>

    <fragment
        android:id="@+id/navigation_space"
        android:name="com.example.firestar.ui.bilibili.space.SpaceFragment"
        android:label="space"
        tools:layout="@layout/fragment_space"/>

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.firestar.ui.bilibili.shop.ShopFragment"
        android:label="shop"
        tools:layout="@layout/fragment_shop"/>

    <fragment
        android:id="@+id/navigation_mine"
        android:name="com.example.firestar.ui.bilibili.mine.MineFragment"
        android:label="mine"
        tools:layout="@layout/fragment_mine"/>
</navigation>